<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relativeLayoutMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/pizzaImage"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="8dp"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Название пиццы:"/>

                    <TextView
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:id="@+id/pizzaName"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Цена:"/>

                    <TextView
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:id="@+id/pizzaPrice"
                        />


                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/filings"/>

                    <com.willy.ratingbar.ScaleRatingBar

                        android:layout_marginTop="4dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/simpleRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srb_numStars="5"
                        app:srb_minimumStars="1"
                        app:srb_rating="2"
                        app:srb_starWidth="13dp"
                        app:srb_starHeight="14dp"
                        app:srb_stepSize="0.5"
                        app:srb_isIndicator="false"
                        app:srb_clickable="true"
                        app:srb_scrollable="true"
                        app:srb_clearRatingEnabled="true"
                        app:srb_drawableEmpty="@drawable/starrate"
                        app:srb_drawableFilled="@drawable/ratestar">
                    </com.willy.ratingbar.ScaleRatingBar>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

            <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/favButton"
                    android:paddingBottom="7dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/heart"
                    android:background="@drawable/my_custom_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"/>
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />
</LinearLayout>